<section class="landing">
  <header class="top-bar">
    <div class="container">
      <a class="logo" href="{{ routes.root_url }}">
        <span class="logo-mark">{{ section.settings.logo_primary | default: 'amazon' }}</span>
        <span class="logo-seller">{{ section.settings.logo_secondary | default: 'seller' }}</span>
      </a>
      <nav class="utility-nav">
        {% if section.settings.header_menu != blank and linklists[section.settings.header_menu] != nil and linklists[section.settings.header_menu].links.size > 0 %}
          {% for link in linklists[section.settings.header_menu].links %}
            <a href="{{ link.url }}">{{ link.title }}</a>
          {% endfor %}
        {% else %}
          <a href="#pricing">{{ section.settings.pricing_nav_label }}</a>
          <a href="#how-it-works">{{ section.settings.how_it_works_nav_label }}</a>
          <a href="#resources">{{ section.settings.resources_nav_label }}</a>
          <a href="#contact" class="cta-link">{{ section.settings.contact_nav_label }}</a>
        {% endif %}
      </nav>
    </div>
  </header>

  <main>
    <section class="hero">
      <div class="container">
        <div class="hero-copy">
          {% if section.settings.hero_eyebrow != blank %}
            <span class="eyebrow">{{ section.settings.hero_eyebrow }}</span>
          {% endif %}
          <h1>{{ section.settings.hero_heading }}</h1>
          {% if section.settings.hero_body != blank %}
            <p>{{ section.settings.hero_body }}</p>
          {% endif %}
          <div class="cta-group">
            {% if section.settings.hero_primary_label != blank %}
              <a class="button primary" href="{{ section.settings.hero_primary_link | default: '#start-selling' }}">{{ section.settings.hero_primary_label }}</a>
            {% endif %}
            {% if section.settings.hero_secondary_label != blank %}
              <a class="button secondary" href="{{ section.settings.hero_secondary_link | default: '#learn-more' }}">{{ section.settings.hero_secondary_label }}</a>
            {% endif %}
          </div>
          {% if section.settings.hero_disclaimer != blank %}
            <p class="disclaimer">{{ section.settings.hero_disclaimer }}</p>
          {% endif %}
        </div>
        <div class="hero-media">
          <div class="device-frame">
            {% if section.settings.hero_image != blank %}
              {% assign hero_alt = section.settings.hero_image_alt | default: section.settings.hero_heading | escape %}
              {{ section.settings.hero_image | image_url: width: 900 | image_tag: loading: 'lazy', alt: hero_alt }}
            {% else %}
              <img src="https://images.unsplash.com/photo-1523475472560-d2df97ec485c?auto=format&fit=crop&w=600&q=80" alt="{{ section.settings.hero_image_alt | default: 'Entrepreneur packaging products' }}">
            {% endif %}
          </div>
          <div class="stat-card">
            {% if section.settings.hero_stat_value != blank %}
              <strong>{{ section.settings.hero_stat_value }}</strong>
            {% endif %}
            {% if section.settings.hero_stat_caption != blank %}
              <span>{{ section.settings.hero_stat_caption }}</span>
            {% endif %}
          </div>
        </div>
      </div>
    </section>

    {% assign feature_blocks = section.blocks | where: 'type', 'feature' %}
    {% if feature_blocks.size > 0 %}
      <section id="start-selling" class="feature-grid">
        <div class="container">
          <header>
            <h2>{{ section.settings.feature_heading }}</h2>
            {% if section.settings.feature_subheading != blank %}
              <p>{{ section.settings.feature_subheading }}</p>
            {% endif %}
          </header>
          <div class="grid">
            {% for block in feature_blocks %}
              <article {{ block.shopify_attributes }}>
                <h3>{{ block.settings.title }}</h3>
                {% if block.settings.body != blank %}
                  <p>{{ block.settings.body }}</p>
                {% endif %}
              </article>
            {% endfor %}
          </div>
        </div>
      </section>
    {% endif %}

    {% assign step_blocks = section.blocks | where: 'type', 'step' %}
    {% if section.settings.steps_heading != blank or step_blocks.size > 0 %}
      <section id="how-it-works" class="steps">
        <div class="container">
          {% if section.settings.steps_heading != blank %}
            <h2>{{ section.settings.steps_heading }}</h2>
          {% endif %}
          {% if step_blocks.size > 0 %}
            <ol>
              {% for block in step_blocks %}
                <li {{ block.shopify_attributes }}>
                  <span class="step-title">{{ block.settings.title }}</span>
                  {% if block.settings.body != blank %}
                    <p>{{ block.settings.body }}</p>
                  {% endif %}
                </li>
              {% endfor %}
            </ol>
          {% endif %}
        </div>
      </section>
    {% endif %}

    {% assign resource_blocks = section.blocks | where: 'type', 'resource' %}
    {% if resource_blocks.size > 0 %}
      <section id="resources" class="resources">
        <div class="container">
          {% for block in resource_blocks %}
            <div class="resource-card" {{ block.shopify_attributes }}>
              <h3>{{ block.settings.title }}</h3>
              {% if block.settings.body != blank %}
                <p>{{ block.settings.body }}</p>
              {% endif %}
              {% if block.settings.button_label != blank %}
                <a class="button tertiary" href="{{ block.settings.button_link | default: '#' }}">{{ block.settings.button_label }}</a>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </section>
    {% endif %}

    {% if section.settings.testimonial_quote != blank %}
      <section class="testimonial">
        <div class="container">
          <blockquote>{{ section.settings.testimonial_quote }}</blockquote>
          {% if section.settings.testimonial_cite != blank %}
            <cite>{{ section.settings.testimonial_cite }}</cite>
          {% endif %}
        </div>
      </section>
    {% endif %}

    {% assign benefit_blocks = section.blocks | where: 'type', 'benefit' %}
    {% if section.settings.pricing_heading != blank or section.settings.pricing_body != blank or benefit_blocks.size > 0 %}
      <section id="pricing" class="pricing">
        <div class="container">
          <div class="pricing-card">
            {% if section.settings.pricing_heading != blank %}
              <h2>{{ section.settings.pricing_heading }}</h2>
            {% endif %}
            {% if section.settings.pricing_body != blank %}
              <p>{{ section.settings.pricing_body }}</p>
            {% endif %}
            {% if section.settings.pricing_button_label != blank %}
              <a class="button primary" href="{{ section.settings.pricing_button_link | default: '#start' }}">{{ section.settings.pricing_button_label }}</a>
            {% endif %}
            {% if benefit_blocks.size > 0 %}
              <ul class="benefits">
                {% for block in benefit_blocks %}
                  <li {{ block.shopify_attributes }}>{{ block.settings.text }}</li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        </div>
      </section>
    {% endif %}

    {% if section.settings.cta_heading != blank or section.settings.cta_body != blank %}
      <section id="contact" class="cta-banner">
        <div class="container">
          <div class="cta-content">
            {% if section.settings.cta_heading != blank %}
              <h2>{{ section.settings.cta_heading }}</h2>
            {% endif %}
            {% if section.settings.cta_body != blank %}
              <p>{{ section.settings.cta_body }}</p>
            {% endif %}
          </div>
          {% if section.settings.cta_button_label != blank %}
            <a class="button primary" href="{{ section.settings.cta_button_link | default: '#' }}">{{ section.settings.cta_button_label }}</a>
          {% endif %}
        </div>
      </section>
    {% endif %}
  </main>

  <footer class="site-footer">
    <div class="container">
      <div class="footer-brand">
        <span class="logo-mark">{{ section.settings.logo_primary | default: 'amazon' }}</span>
        <span class="logo-seller">{{ section.settings.logo_secondary | default: 'seller' }}</span>
      </div>
      <nav class="footer-links">
        <a href="#pricing">{{ section.settings.pricing_nav_label }}</a>
        <a href="#how-it-works">{{ section.settings.how_it_works_nav_label }}</a>
        <a href="#resources">{{ section.settings.resources_nav_label }}</a>
        <a href="#contact">{{ section.settings.contact_nav_label }}</a>
      </nav>
      {% if section.settings.footer_legal != blank %}
        <p class="legal">{{ section.settings.footer_legal }}</p>
      {% endif %}
    </div>
  </footer>
</section>

